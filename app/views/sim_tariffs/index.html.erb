<h1>Simcard Tariffs</h1>

<div class="row">
  <% if @sim_tariffs.any? %>
      <div class="container-fluid">
        <p><%= link_to 'New Tariff', new_sim_tariff_path, class: "btn btn-primary", role: "button" %></p>
      </div>
      <div class="container-fluid">
        <table class="table table-striped table-bordered table-hover orders-table">
          <tr>
            <th>Tariff</th>
            <th>Active true/false</th>
          </tr>
          <% @sim_tariffs.each do |st| %>
              <tr data-href=<%= sim_tariff_path(st) %> data-toggle="tooltip" title="Show">
                <td><%= st.tariff %></td>
                <td><%= st.active? %></td>
              </tr>
          <% end %>
        </table>
  <% else %>
      <div class="panel panel-warning" align="center">
        <div class="panel-heading">
          <h3 class="panel-title">No sim types yet</h3>
        </div>
        <div class="panel-body" align="center">
          <p><%= link_to 'New tariff', new_sim_tariff_path, class: "btn btn-danger", role: "button" %></p>
        </div>
      </div>
  <% end %>

  </div>
</div>
