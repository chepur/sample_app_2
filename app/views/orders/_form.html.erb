<%= form_for(@order) do |f| %>
    <div class="field">
      <ul>
        <li>
          <%= f.label :Name %>
          <%= f.text_field :name %>
        </li>
        <li>
          <%= f.label :Surname %>
          <%= f.text_field :surname %>
        </li>
        <li>
          <%= f.label :Teudat %>
          <%= f.number_field :tz %>
        </li>
        <li>
          <%= f.label :Phone %>
          <%= f.phone_field :phone %>
        </li>
      </ul>
    </div>
    <%= submit_tag "Add simcard", type: 'button', id: 'addSimcard', onclick: 'addSimcardField()' %>

    <div id="simcardHeader" style="display:none">Simcard information:</div>


    <ul id="myList">
    </ul>
    <div class="actions">
      <%= f.submit "Create Order" %>
    </div>

<% end %>

<div class="col-md-6 col-md-offset-1 col-xs-6 col-xs-offset-1">
  <p><%= link_to '< Back to orders', orders_path, class: "btn btn-link", role: "button" %></p>
</div>
