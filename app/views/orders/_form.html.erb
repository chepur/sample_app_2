<%= bootstrap_form_for(@order, label_errors: true, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="container-fluid col-md-6 col-md-offset-3 col-xs-6 col-xs-offset-3">
      <%= f.text_field :name %>
      <%= f.text_field :surname %>
      <%= f.number_field :tz %>
      <%= f.phone_field :phone %>
      <%= f.submit "Create order", class: "btn btn-success col-md-offset-4 col-xs-6 col-xs-offset-3" %>
    </div>
<% end %>

<div class="col-md-6 col-md-offset-1 col-xs-6 col-xs-offset-1">
  <p><%= link_to '< Back to orders', orders_path, class: "btn btn-link", role: "button" %></p>
</div>