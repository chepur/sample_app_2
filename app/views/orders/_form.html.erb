    <%= f.text_field :surname, label: "Surname:" %>
    <%= f.number_field :tz, label: "Teudat zeut:" %>
    <%= f.phone_field :phone, label: "Phone:" %>

    <h2 align="center">Simcard(-s):</h2>

    <%= f.fields_for :simcards %>
    <%= f.link_to_add("Add simcard", :simcards) %>






    <!%= f.submit(class: "btn btn-primary") %>
<% end %>




