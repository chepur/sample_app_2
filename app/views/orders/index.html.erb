<h1>Listing of orders</h1>

<div class="row">
  <% if @orders.any? %>
      <div class="container-fluid">
        <p><%= link_to 'Add order', new_order_path, class: "btn btn-primary", role: "button" %></p>
      </div>
      <div class="container-fluid">
        <table class="table table-striped table-bordered table-hover orders-table">
          <tr>
            <th>Full Name</th>
            <th>Teudat Zehud</th>
            <th>Contact phone</th>
            <th>Total sim card(-s):</th>
          </tr>

          <% @orders.each do |order| %>
              <tr data-href=<%= order_path(order) %> data-toggle="tooltip" title="Show order!">
                <td><%= "#{order.name} #{order.surname}" %></td>
                <td><%= order.tz %></td>
                <td><%= order.phone %></td>
                <td align="center"><strong><%= order.simcards.count.to_i %></strong></td>
                </td>
              </tr>
          <% end %>
        </table>
        <div align="center">
          <%= will_paginate @orders %>
        </div>
  <% else %>
      <div class="panel panel-warning" align="center">
        <div class="panel-heading">
          <h3 class="panel-title">No orders yet</h3>
        </div>
        <div class="panel-body" align="center">
          <p><%= link_to 'Add order', new_order_path, class: "btn btn-danger", role: "button" %></p>
        </div>
      </div>
  <% end %>

  </div>
</div>
