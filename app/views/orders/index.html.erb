<h1>Listing orders</h1>

<div class="row">
  <div class="container-fluid">
      <p><%= link_to 'Add order', new_order_path, class: "btn btn-primary", role: "button" %></p>
  </div>
</div>

<div class="row">
  <div class="container-fluid">

    <table class="table table-striped table-bordered table-hover orders-table">
      <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Teudat Zehud</th>
        <th>phone</th>
      </tr>

      <% @orders.each do |order| %>
          <tr data-href=<%= order_path(order) %> data-toggle="tooltip" title="Show order!">
            <td><%= order.name %></td>
            <td><%= order.surname %></td>
            <td><%= order.tz %></td>
            <td><%= order.phone %></td>
          </tr>
      <% end %>
    </table>
  </div>
</div>
